  $0
</form>
endsnippet

snippet field "fieldset element" w
<fieldset$1>
  $0
</fieldset>
endsnippet

snippet button "button element" w
<button$3>
  $0
</button>
endsnippet

snippet type "type=" w
type="$1"$0
endsnippet
